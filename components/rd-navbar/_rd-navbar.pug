include _navigation

mixin rd-navbar
	//RD Navbar
	header#home.section.rd-navbar-wrap( data-preset!={ title:'Navbar Default', category:'header', reload:true, id:'navbar-default' } )
		nav.rd-navbar&attributes( attributes )
			.navbar-container
				.navbar-cell
					.navbar-panel
						button.navbar-switch.mdi-menu.novi-icon( data-multi-switch!= {
							targets: '.rd-navbar',
							scope:   '.rd-navbar',
							isolate: '[data-multi-switch]'
						})

						.navbar-logo
							a.navbar-logo-link( href= homePage.link )
								+img( logo.default, { retina: true } ).navbar-logo-default( alt= logo.name )
								+img( logo.inverse, { retina: true } ).navbar-logo-inverse( alt= logo.name )

				.navbar-cell.navbar-spacer

				.navbar-cell.navbar-sidebar
					+navigation( menu )

				.navbar-cell
					.navbar-subpanel
						.navbar-subpanel-item
							.navbar-info
								button.btn( data-custom-scroll-to='contacts' )
									span.btn-icon.mdi-book-open
									span Make an Appointment

							button.navbar-button.navbar-info-button.mdi-dots-vertical.novi-icon( data-multi-switch!= {
								targets: '.rd-navbar',
								scope:   '.rd-navbar',
								class:   'navbar-info-active',
								isolate: '[data-multi-switch]'
							})

